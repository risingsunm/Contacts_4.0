<!--Begin: Modified by siliangqi for display_contact 2011-6-6-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomContactListFilterView"
    android:orientation="vertical"
    android:background="#000000"
    android:fillViewport="true">

    <ExpandableListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:divider="@color/contact_list_separator_color"
        android:dividerHeight="1dip"
        android:childDivider="@color/contact_list_separator_color"
        android:groupIndicator="@drawable/arrow_expanded"
        android:layout_marginLeft="@dimen/contact_filter_left_margin"
        android:layout_marginRight="@dimen/contact_filter_right_margin"
        android:overScrollMode="always" />
<!--End: Modified by siliangqi for display_contact 2011-6-6-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:background="?android:attr/dividerHorizontal" />
<!--Begin: Modified by siliangqi for display_contact 2011-6-6-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@color/call_log_delete_all_normal"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_done"
        android:layout_width="156dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="6dip"
        android:background="@drawable/btn_delete"
        android:text="@string/btn_ok"
        android:paddingTop="4dip"
        android:textSize="28px"
        android:textColor="@color/contact_black_color" />
        <Button android:id="@+id/btn_discard"
        android:layout_width="156dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="6dip"
        android:paddingTop="4dip"
        android:background="@drawable/btn_delete"
        android:text="@string/btn_cancel"
        android:textSize="28px"
        android:textColor="@color/contact_black_color" />
<!--End: Modified by siliangqi for display_contact 2011-6-6-->
    </LinearLayout>
</LinearLayout>
