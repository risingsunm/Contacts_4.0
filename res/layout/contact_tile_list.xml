<!-- Begin: Modified by xiepengfei for modify the ContactTileListFragment bg color 2012/05/26 -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contact_black_color"
    android:paddingBottom="?attr/favorites_padding_bottom">
<!-- End: Modified by xiepengfei for modify the ContactTileListFragment bg color 2012/05/26 -->

<!-- Begin: Modified by xiepengfei for modify listview divider 2012/05/31 -->
<!-- Begin: Modified by sunrise for scroll bar unique 2012-7-30 -->
<!-- Begin: Modified by bxinchun, change the class to TouchListView -->
<!--
    <ListView
 -->
<!-- End: Modified by bxinchun, change the class to TouchListView -->
    <com.android.contacts.widget.TouchListView
        android:id="@+id/contact_tile_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/contact_tile_list_padding_top"
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:divider="@color/contact_list_separator_color"
        android:dividerHeight="1px" />
<!-- android:divider="@null" -->
<!-- End: Modified by sunrise for scroll bar unique 2012-7-30 -->
<!-- End: Modified by xiepengfei for modify listview divider 2012/05/31 -->

    <TextView
        android:id="@+id/contact_tile_list_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/empty_message_top_margin"
        android:textColor="?android:attr/textColorSecondary"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

</FrameLayout>
