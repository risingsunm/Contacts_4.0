    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dip"
       >

        <view
            android:id="@+id/call_type_icon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginTop="3dip"
            class="com.android.contacts.calllog.CallTypeIconsView" />

        <TextView
            android:id="@+id/call_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/call_log_icon_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/secondary_text_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/calldetail_list_item_date_color"
            android:textSize="28px" />

         <ImageView
            android:id="@+id/call_view"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginTop="3dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/calldetail_list_call" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        >

        <TextView
            android:id="@+id/call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dip"
            android:textColor="@color/calldetail_list_item_number_color"
            android:text="@string/actionIncomingCall" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/calldetail_list_item_duration_color"
            android:textSize="20px"/>
        <!--<TextView
